<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    tools:context="com.example.imap.MainActivity" >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />

    <ImageButton
        android:id="@+id/button_listen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bmapView"
        android:layout_alignTop="@+id/bmapView"
        android:src="@drawable/selector" 
        android:background="#00000000" />
     
<ImageView
    android:id="@+id/blackground"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:src="@drawable/blackground" />

<ImageView
    android:id="@+id/button_huatongbeijing"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="#00000000"
   
    android:scaleType="fitCenter"
    android:src="@drawable/huatongbeijing" />

<ImageButton
    android:id="@+id/button_huatong"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignTop="@+id/button_huatongbeijing"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="18dp"
    android:background="#00000000"
    android:scaleType="fitCenter"
    android:src="@drawable/hautong" />


<ImageButton
    android:id="@+id/button_paihang"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@+id/button_listen"
    android:background="#00000000"
    android:scaleType="fitCenter"
    android:src="@drawable/paihang" />

<ImageButton
    android:id="@+id/button_settings"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignLeft="@+id/button_listen"
    android:layout_alignParentBottom="true"
    android:background="#00000000"
    android:scaleType="fitCenter"
    android:src="@drawable/settings" />

<ImageButton
    android:id="@+id/button_viewpoint"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="16dp"
    android:background="#00000000"
    android:scaleType="fitCenter"
    android:src="@drawable/viewpoint" />

<ImageButton
    android:id="@+id/button_person"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/button_viewpoint"
    android:background="#00000000"
    android:scaleType="fitCenter"
    android:src="@drawable/person" />

</RelativeLayout>