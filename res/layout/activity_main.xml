<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

         
 <TableLayout 
    android:id="@+id/tablelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:stretchColumns="0,1,2,3,4"
    >

     <TableRow>

         <ImageButton
             android:id="@+id/button_listen"
             android:layout_width="1dip"
             android:layout_column="4"
             android:background="#00000000"
             android:scaleType="fitCenter"
             android:src="@drawable/listen" />


     </TableRow>
   
	<TableRow>

		<Button
		    android:id="@+id/button1"
		    android:layout_width="1dip"
             android:layout_column="4"
		    android:scaleType="fitCenter"
		    android:layout_marginTop="10dip" />
	    
    </TableRow>
    
	<TableRow
	    android:layout_weight="1">
 <EditText
	android:id="@+id/show"  
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:editable="false"
	android:cursorVisible="false"
	android:visibility="gone"
	/>
 
    </TableRow> 

    
	<TableRow
	    android:layout_weight="1">
    </TableRow>
    
	<TableRow
	    android:layout_weight="1">
    </TableRow>
    
	<TableRow
	    android:background="#ff000000">
		<ImageButton
			android:id="@+id/button_viewpoint"
			android:layout_column="0"
			android:scaleType="fitCenter"
			android:src="@drawable/viewpoint" />

		<ImageButton
		    android:id="@+id/button_person"
		    android:layout_column="1"
		    android:scaleType="fitCenter"
		    android:src="@drawable/person" />

	     <ImageButton
			android:id="@+id/button_huatong"
			android:layout_column="2"
			android:scaleType="fitCenter"
			android:src="@drawable/huatong" />
	     <ImageButton
			android:id="@+id/button_paihang"
			android:layout_column="3"
			android:scaleType="fitCenter"
			android:src="@drawable/paihang" />
	     <ImageButton
			android:id="@+id/button_settings"
			android:layout_column="4"
			android:scaleType="fitCenter"
			android:src="@drawable/settings" />
	     

	    
    </TableRow>
    
</TableLayout>

      	     <TextView 
	        android:id="@+id/textview_tip"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="0px"
			android:visibility="gone"
			android:text="请长按地图确定地点"
			android:scaleType="fitCenter"
			android:textSize="10pt"
			android:textColor="#FF0000"
	        
	         />
	     
     
      <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:visibility="gone"
        />
    
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/time"
        android:layout_centerHorizontal="true" 
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_recorder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bt_recorder_pg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="按住说话"
            android:textColor="#ffffff"
            android:textStyle="bold" 
            android:visibility="gone"/>
        
        <ImageButton
            android:id="@+id/bt_play"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="#00000000"
            android:layout_gravity="center"
            android:src="@drawable/bt_play_pg" 
            android:visibility="gone"
            />
    </LinearLayout>
      	     
      

</FrameLayout>
